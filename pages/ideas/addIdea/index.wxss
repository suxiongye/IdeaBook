@import "../../common/lib/weui.wxss";

.ideaForm {
  position: absolute;
  width: 100%;
  top: 0rpx;
  bottom: 120rpx;
  overflow: auto;
}

.ideaTitleItem {
  height: 120rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 10rpx;
  padding: 10rpx;
}

.ideaTitle {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  line-height: 30rpx;
  font-weight: bolder;
  color: rgb(255, 24, 103);
}

.ideaTitleInput {
  margin-top: 10rpx;
  line-height: 30rpx;
  padding: 10rpx;
  border-bottom: 2rpx rgb(255, 24, 103) solid;
}

.ideaContentItem {
  height: 370rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 10rpx;
  padding: 10rpx;
}

.ideaContent {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  line-height: 30rpx;
  font-weight: bolder;
  color: rgb(255, 24, 103);
}

.ideaContentInput {
  margin-top: 10rpx;
  width: 97%;
  height: 300rpx;
  line-height: 30rpx;
  padding: 10rpx;
  border: 2rpx rgb(255, 24, 103) solid;
  box-shadow: 4rpx 4rpx 2rpx rgba(214, 214, 214, 0.8);
}

.ideaPicItem {
  width: 90%;
  height: 270rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  padding: 10rpx;
}

.ideaPic {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  line-height: 30rpx;
  font-weight: bolder;
  color: rgb(255, 24, 103);
}

.ideaPicList {
  height: 200rpx;
  width: 65%;
  float: left;
  background: rgba(214, 214, 214, 0.2);
  white-space: nowrap;
}

.ideaPicTips {
  margin-top: 20rpx;
  margin-left: 20rpx;
  color: rgba(255, 24, 103, 0.6);
}

.ideaPicListItem {
  max-height: 200rpx;
  display: inline-block;
  max-width: 100%;
}

.ideaPicListItem image {
  max-height: 200rpx;
  max-width: 100%;
  white-space: nowrap;
}

.addPicBtn {
  max-width: 30%;
  float: right;
}

.ideaRecItem {
  width: 90%;
  height: 150rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  padding: 10rpx;
}

.ideaRec {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  line-height: 30rpx;
  font-weight: bolder;
  color: rgb(255, 24, 103);
}

.ideaRecTips {
  font-size: 30rpx;
  margin-left: 10rpx;
  color: rgba(255, 24, 103, 0.6);
}

.ideaRecList {
  height: 100rpx;
  width: 65%;
  background: rgba(214, 214, 214, 0.2);
  float: left;
}

.voiceIcon {
  height: 100rpx;
  width: 100rpx;
}

.voiceIcon image {
  height: 100rpx;
  width: 100rpx;
}

.ideaRecControl {
  width: 30%;
  float: right;
  margin-left: 10rpx;
  text-align: center;
}

.ideaRecBtn {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  float: left;
  margin-right: 10rpx;
  border: 1rpx rgba(255, 24, 103, 0.3) solid;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 1rpx rgba(214, 214, 214, 0.5);
}

.ideaRecBtnHover {
  width: 85rpx;
  height: 85rpx;
  border: 3rpx rgba(255, 24, 103, 0.3) solid;
  box-shadow: 4rpx 4rpx 1rpx rgba(214, 214, 214, 1);
}

.ideaRecBtn image {
  width: 80rpx;
  height: 80rpx;
}

.btnBar {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
}

.resetBtn {
  width: 45%;
  height: 80rpx;
  float: left;
  margin: 15rpx;
  color: rgb(134, 129, 158);
  font-size: 40rpx;
  font-weight: bolder;
  line-height: 80rpx;
  background: rgb(255, 255, 255);
  box-shadow: 7rpx 7rpx 3rpx rgba(214, 214, 214, 0.8);
}

.resetBtnHover {
  font-size: 45rpx;
  box-shadow: 3rpx 3rpx 1rpx rgba(214, 214, 214, 1);
}

.submitBtn {
  width: 45%;
  height: 80rpx;
  float: right;
  margin: 15rpx;
  color: rgb(255, 255, 255);
  font-size: 40rpx;
  font-weight: bolder;
  line-height: 80rpx;
  background: rgb(255, 24, 103);
  box-shadow: 7rpx 7rpx 3rpx rgba(214, 214, 214, 0.8);
}

.submitBtnHover {
  font-size: 45rpx;
  box-shadow: 3rpx 3rpx 1rpx rgba(214, 214, 214, 1);
}
