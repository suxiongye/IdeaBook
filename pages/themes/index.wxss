.tagPicker {
  flex-direction: row;
  display: flex;
  height: 120rpx;
  border-top: 2rpx rgba(117, 110, 115, 0.3) solid;
  border-bottom: 2rpx rgba(117, 110, 115, 0.3) solid;
  background: white;
}

.tagPic {
  width: 18%;
  height: 100rpx;
  margin: 10rpx;
}

.tagPic image {
  width: 100%;
  height: 100%;
}

.tagContent {
  width: 75%;
  height: 100rpx;
  margin: 10rpx;
  white-space: nowrap;
}

.tagItem {
  width: fit-content;
  padding-left: 25rpx;
  padding-right: 25rpx;
  line-height: 60rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  text-align: center;
  background: #edfffb;
  color: white;
  font-size: 30rpx;
  opacity: 0.6;
}

.themeList {
  width: 100%;
  position: absolute;
  height: 900rpx;
  top: 130rpx;
  bottom: 0;
  padding: 10rpx;
}

.themeBlock {
  width: 45%;
  height: auto;
  position: relative;
  float: left;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  text-align: center;
  font-size: 40rpx; 
  font-weight: bolder;
  color: rgba(255, 24, 103, 1);
}

.themeBlock image{
  border-radius: 50rpx;
  box-shadow: 7rpx 7rpx 3rpx rgba(224,224, 225, 0.8);
  margin-bottom: 10rpx;
}

.themeName {
  vertical-align: middle;
  text-align: center;
}

.themeLogo {
  width: 100%;
  height: 80%;
}

.addBtn {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 24, 103, 0.9);
}

.addBtn image {
  width: 40rpx;
  height: 40rpx;
}